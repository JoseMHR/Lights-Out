<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lucesfuera.taos"
    android:versionCode="5"
    android:versionName="5.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.lucesfuera.taos.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lucesfuera.taos.Extremo"
            android:label="@string/title_activity_extremo" >
        </activity>
        <activity android:name="com.lucesfuera.taos.Facil" >
        </activity>
        <activity android:name="com.lucesfuera.taos.Normal" >
        </activity>
        <activity android:name="com.lucesfuera.taos.Dificil" >
        </activity>
        <activity
            android:name="com.lucesfuera.taos.Terminado"
            android:label="@string/title_activity_terminado" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>